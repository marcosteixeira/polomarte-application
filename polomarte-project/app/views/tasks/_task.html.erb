<%= form_for task, remote: true do |f| %>
    <%= hidden_field_tag(request_forgery_protection_token.to_s, form_authenticity_token) %>
    <%= f.check_box :finalized, class: "edit_task" %>
    <%= f.label :finalized, task.description %>
    <%= link_to "(remove)", task, method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
<% end %>
